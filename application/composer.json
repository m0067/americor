{
    "name": "m0067/americor",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.11",
        "slevomat/coding-standard": "^8.15"
    },
    "scripts": {
        "phpcs-fix": "./vendor/bin/phpcbf --standard=ruleset.xml --extensions=php --tab-width=4 -sp src tests"
    },
    "autoload": {
        "psr-4": {
            "Americor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Maksim Tsoi",
            "email": "maksimtsoi.nsk@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
